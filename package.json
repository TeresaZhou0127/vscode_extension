{
  "name": "active-git-backup",
  "displayName": "Active Git Backup",
  "description": "Extension for automating backup branch management",
  "version": "0.1.0",
  "publisher": "max-yu",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxyu1115/active-git-backup.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "active-git-backup.createBackupBranch",
        "title": "Active Git Backup: Create Backup Branch"
      },
      {
        "command": "active-git-backup.retireBackupBranch",
        "title": "Active Git Backup: Retire Backup Branch"
      },
      {
        "command": "active-git-backup.syncBackupBranch",
        "title": "Active Git Backup: Sync Backup Branch"
      },
      {
        "command": "active-git-backup.backup",
        "title": "Active Git Backup: Backup"
      },
      {
        "command": "active-git-backup.loadBackup",
        "title": "Active Git Backup: Load Backup"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Active Git Backup",
      "properties": {
        "active-git-backup.branchInfoPath": {
          "type": "string",
          "default": ".agbbinfo",
          "description": "Path pointing to the Branch Info file. (This file needs to be tracked by git)"
        },
        "active-git-backup.defaultAutoBackupBranches": {
          "type": "boolean",
          "default": false,
          "description": "Unless overrided for specific branches, auto backup every branch"
        },
        "active-git-backup.defaultBackupUpstreamName": {
          "type": "string",
          "default": "origin",
          "description": "The upstream name we backup to. This defaults to \"origin\""
        },
        "active-git-backup.shouldCommitBranchInfoFile": {
          "type": "boolean",
          "default": false,
          "description": "When creating a new Backup Branch, do you want to commit the branch info file change. (This is useful for sharing across devices)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "simple-git": "^3.16.1"
  }
}
